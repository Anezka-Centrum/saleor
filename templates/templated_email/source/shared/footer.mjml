<mj-spacer height="48px"/>
<mj-wrapper background-color="#79A742" full-width="full-width" padding="0" padding-top="30px"
            padding-bottom="40px">
    <mj-section>
        <mj-column vertical-align="middle">
            <mj-text
                    font-family="Times"
                    font-weight="bold"
            >
                <a href="mailto:objednavky@anezka.sk"
