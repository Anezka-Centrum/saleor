<mjml>
    <mj-include path="./shared/header.mjml"/>
    <mj-body background-color="#f0f0f0">
        <mj-wrapper background-color="#FFFFFF" border-radius="0 0 12px 12px" padding="0" padding-bottom="48px">
            <mj-section padding="0">
                <mj-column>
                    <mj-image
                            src="https://broskyna.anezka.sk/logo-with-years.svg"
                            height="48px"
                            href="https://anezka.sk/"
                    />
                </mj-column>
            </mj-section>
            <mj-section padding-bottom="0" padding-top="48px" background-color="#F1FCF7">
                <mj-column>
                    <mj-image src="https://api.broskyna.anezka.sk/static/images/email/order_status_delivery.png"
                              width="480px"/>
                </mj-column>
            </mj-section>
                        <mj-section padding="0" padding-top="48px" background-color="#FFFFFF" background-size="100% 48px" background-repeat="no-repeat"
                        background-url="https://api.broskyna.anezka.sk/static/images/email/background-transition.png">
            </mj-section>

            <mj-section padding-top="48px">
                <mj-column>
                    <mj-text mj-class="title">Vaša objednávka #{{ order.id }} je na ceste</mj-text>
                    <mj-text>Vašu objednávku sme skompletizovali a predali kurierskej spoločnosti.
                    </mj-text>
                    <mj-button padding-top="12px">Sledovať objednávku</mj-button>
                </mj-column>
            </mj-section>
        </mj-wrapper>

        <mj-spacer height="24px"/>

        <mj-include path="./partials/_order_lines.mjml"/>

        <mj-include path="./shared/footer.mjml"/>
    </mj-body>
</mjml>
